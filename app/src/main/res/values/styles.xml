<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="textInTabAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">19sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="textInTabAppearance17sp" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textInButtonClassDownloadClick">
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="textInButtonClassDownloadDisable" >
        <item name="android:textSize">19sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="MyRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/selector_button_collection</item>
    </style>
</resources>
