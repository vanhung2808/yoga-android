<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fitsSystemWindows="true">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <com.stdio.hue.yoga.common.widgets.slider.library.SliderLayout
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:auto_cycle="true"
                    app:layout_scrollFlags="scroll|enterAlways"
                    custom:indicator_visibility="visible"
                    custom:pager_animation="Accordion"
                    custom:pager_animation_span="5000" />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="@color/colorWhite"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/iv_search"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >
                        <RadioButton
                            fontPath="@string/fonts_helveticaneue_bold"
                            android:button="@android:color/transparent"
                            android:id="@+id/bt_collections"
                            android:checked="true"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/button_collection_selector"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="@string/collections"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="19sp"
                            style="?android:attr/borderlessButtonStyle"
                            />


                        <RadioButton
                            android:textAllCaps="false"
                            android:button="@android:color/transparent"
                            android:id="@+id/bt_downloaded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/button_downloaded_selector"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="@string/downloaded"
                            android:textColor="@color/colorBlack"
                            android:textSize="19sp"
                            style="?android:attr/borderlessButtonStyle"
                            />
                    </RadioGroup>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_home_search_gray" />
            </RelativeLayout>

            <com.stdio.hue.yoga.common.widgets.ViewPagerNotScroll
                android:id="@+id/vp_classes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>