<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_normal"
            android:layout_marginEnd="@dimen/space_x_large"
            android:layout_marginBottom="@dimen/space_normal"
            android:layout_marginStart="@dimen/space_large"
            >

            <EditText
                android:id="@+id/et_search_poses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_white_corner"
                android:drawableStart="@drawable/ic_search_gray"
                android:drawablePadding="16dp"
                android:hint="@string/enter_pose_name"
                android:minHeight="50dp"
                android:paddingStart="@dimen/space_large"
                android:paddingEnd="@dimen/space_normal"
                android:textSize="@dimen/text_size_x_large"
                fontPath="@string/fonts_helveticaneue_medium"
                android:textColorHint="@color/colorGrayLightes" />

            <ImageView
                android:id="@+id/iv_filter_poses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginEnd="@dimen/space_normal"
                android:padding="@dimen/space_small"
                android:src="@drawable/ic_three_line_gray" />
        </FrameLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_poses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_poses"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>